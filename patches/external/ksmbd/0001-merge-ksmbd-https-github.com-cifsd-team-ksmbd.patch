+	rc = ksmbd_vfs_link(work, target_name, link_name);
+	if (rc)
+		rc = -EINVAL;
+out:
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(6, 4, 0)
+	if (file_present)
+		ksmbd_vfs_kern_path_unlock(&parent_path, &path);
+#endif
+	if (!IS_ERR(link_name))
+		kfree(link_name);
+	kfree(pathname);
+	return rc;
+}
