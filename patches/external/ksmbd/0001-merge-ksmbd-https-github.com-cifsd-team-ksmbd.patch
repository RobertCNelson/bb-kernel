+	}
+
+	if (file_info->ReplaceIfExists) {
+		if (file_present) {
+#if LINUX_VERSION_CODE >= KERNEL_VERSION(6, 4, 0)
+			rc = ksmbd_vfs_remove_file(work, &path);
+#else
+			rc = ksmbd_vfs_remove_file(work, link_name);
