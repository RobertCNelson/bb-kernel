 		WARN_ON(atomic_read(&sdiodev->freezer->freezing));
 		kfree(sdiodev->freezer);
+		sdiodev->freezer = NULL;
 	}
 }
 
@@ -879,13 +880,9 @@ int brcmf_sdiod_remove(struct brcmf_sdio_dev *sdiodev)
 
